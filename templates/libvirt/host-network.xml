<network>
  <name>{{ item.name }}</name>
  {% if (item.mode | default("nat")) == "nat" %}
  <forward type="nat">
    <nat>
    </nat>
  </forward>
  <mac address="{{ item.mac }}"/>
  {% endif %}
  <bridge name="{{ item.iface }}" stp="on" delay="0" />
  <ip address="{{ item.ip4 | ipaddr('address') }}" netmask="{{ item.ip4 | ipaddr('netmask') }}">
  </ip>
  {% for route in item.routes | default([]) %}
  <route family="{{ route.family }}" address="{{ route.address }}" prefix="{{ route.prefix }}" gateway="{{ route.gateway }}"/>
  {% endfor %}
  {% if item.ip6 | default(False) %}
  <ip family="ipv6" address="{{ item.ip6 | ipaddr('address') }}" prefix="{{ item.ip6 | ipaddr('prefix') }}" />
  {% endif %}
  <ip family="ipv6" address="fe80::1" prefix="64"/>
</network>
